@page
@model ElectricStationMap.Areas.Identity.Pages.Account.ResetPasswordModel
@{
	ViewData["Title"] = "Сброс пароля";
}

<div class="card">
	<div class="row justify-content-center">
		<div class="col-md-3">
			<h1>@ViewData["Title"]</h1>
			<section>
				<form id="account" asp-method="post" asp-route-returnUrl="@Model.ReturnUrl">
					<div asp-validation-summary="All" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="Input.Email"></label>
						<input asp-for="Input.Email" class="form-control" />
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>
					<p></p>
					<div class="form-group">
						<button type="submit" class="btn btn-primary">Продолжить</button>
					</div>
				</form>
				<p></p>
				<a href="/Identity/Account/Register?ReturnUrl=@Model.ReturnUrl">Нет учетной записи? Регистрация здесь!</a>
				<p></p>
			</section>
		</div>
	</div>
</div>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}