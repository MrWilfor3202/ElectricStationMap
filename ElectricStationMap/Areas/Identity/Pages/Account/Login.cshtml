@page
@model ElectricStationMap.Areas.Identity.Pages.Account.LoginModel
@{
	ViewData["Title"] = "Вход";
}

<div class="card">
	<div class="row justify-content-center">
		<div class="col-md-3">
			<h1>@ViewData["Title"]</h1>
			<section>
				<form id="account" asp-method="post" asp-route-returnUrl="@Model.ReturnUrl">
					<div asp-validation-summary="All" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="Input.Email"></label>
						<input asp-for ="Input.Email" class="form-control"/>
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>
					<p></p>
					<div class="form-group">
						<label asp-for="Input.Password"></label>
						<input asp-for="Input.Password" class="form-control" />
						<span asp-validation-for="Input.Password" class="text-danger"></span>
					</div>
					<p></p>
					<div class="form-group">
						<div class="checkbox">
							<label asp-for="Input.RememberMe">
								<input asp-for="Input.RememberMe"/>
								@Html.DisplayNameFor(m => m.Input.RememberMe)
							</label>
						</div>
					</div>
					<p></p>

					<div class="form-group">
						<button type="submit" class="btn btn-primary">Войти</button>
					</div>
				</form>
				<p></p>
				<a href="/Identity/Account/Register?ReturnUrl=@Model.ReturnUrl">Нет учетной записи? Регистрация здесь!</a>
				<p></p>

				<a href="/Identity/Account/ResetPassword?ReturnUrl=@Model.ReturnUrl">Забыли пароль? Перейдите сюда!</a>
				<P></P>
			</section>
		</div>
	</div>
</div>

@section Scripts 
{
	<partial name ="_ValidationScriptsPartial"/>
}